<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>commitlint</ToolCommandName>
        <Version>1.0.1</Version>
        <Authors>Lauan Guermandi</Authors>
        <Description>A CLI tool for validating commit messages.</Description>
        <PackageTags>git commit lint cli</PackageTags>
        <PackageLicenseExpression>BSD-2-Clause</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/LauanGuermandi/CommitLint</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Spectre.Console" Version="0.49.1" />
    </ItemGroup>

</Project>
